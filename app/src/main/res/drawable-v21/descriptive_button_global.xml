<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <ripple android:color="@color/ButtonGlobalRippleStyle"
            android:radius="-15sp">
            <item>
                <shape>
                    <gradient
                        android:startColor="@color/ButtonGlobalStyle"
                        android:endColor="@color/ButtonGlobalRippleStyle"
                        android:angle="270"
                        android:gradientRadius="1dp"/>
                    <corners
                        android:radius="10dp"/>

                </shape>
            </item>
        </ripple>
    </item>

    <item>
        <shape>
            <solid
                android:color="@color/ButtonGlobalStyle"/>
            <stroke
                android:width="1dp"
                android:color="@color/ButtonGlobalBorderStyle"/>
            <corners
                android:radius="10dp"/>
        </shape>
    </item>


</selector>