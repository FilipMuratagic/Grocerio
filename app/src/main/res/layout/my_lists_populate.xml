<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="1dp"
        android:layout_marginBottom="10dp"
        >

        <ImageView
            android:id="@+id/ImageViewMyList"
            android:contentDescription="@string/MyListIconDescription"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_height="110dp"
            android:layout_width="110dp"
            android:background="@drawable/button_itemlist_design"
            android:padding="4.4dp"
            android:src="@drawable/my_lists_icon_drawable"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onListSpecificClicked"
            />

        <TextView
            android:id="@+id/TextViewListNumber"
            android:layout_marginStart="5dp"
            android:layout_width="110dp"
            android:layout_height="20dp"

            android:gravity="center"
            style="@style/MyListsTextViewStyle"
            />

        <TextView
            android:id="@+id/TextViewDateCreated"
            android:layout_marginStart="5dp"
            android:layout_width="110dp"
            android:layout_height="20dp"

            android:gravity="center"
            style="@style/MyListsTextViewStyle"/>


    </LinearLayout>
</androidx.cardview.widget.CardView>